[colors]
background = #33ffffff
foreground = #fff

[bar/top]
width = 100%
height = 2%

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2

module-margin = 2

padding-right = 2

font-0 = Noto Sans CJK KR:size=10:weight=bold;2

modules-left = bspwm
modules-center = title
modules-right = playerctl alsa time

cursor-click = pointer
cursor-scroll = ns-resize

wm-restack = bspwm

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-underline= ${colors.foreground}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2

label-empty =

[module/alsa]
type = internal/alsa

label-volume = %percentage%%

label-muted = muted

[module/time]
type = internal/date

date =
date-alt = "%Y/%m/%d %a"

time = %l:%M %p
time-alt = %H:%M:%S

label = %date% %time%

[module/title]
type = internal/xwindow

[module/playerctl]
type = custom/script
exec = ~/.config/polybar/playerctl.sh
exec-if = playerctl status
interval = 3
label = %output:0:30:...%

; vim:ft=dosini
